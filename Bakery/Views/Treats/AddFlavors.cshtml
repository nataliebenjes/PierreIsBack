@{
    Layout = "_Layout";
}

@model Bakery.Models.Treat

<h2>Add a flavor to this Treat category</h2>
<div>
    <h4>Add a flavor: @Html.DisplayFor(model => model.TreatName)</h4>
    @if (@ViewBag.Treats.Count == 0)
    {
        <p>You must first add a treat to your database!</p>
        <p>@Html.ActionLink("Add a treat", "Create", "Treats")</p>
    }
    else
    {
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.TreatId)

            @Html.Label("Select treat")
            @Html.DropDownList("TreatId")

            <input type="submit" value="Save" class="btn btn-default" />
        }
    }

    <p>@Html.ActionLink("Back to list", "Index")</p>
    <p>@Html.ActionLink("Add a new treat", "Create", "Treats")</p>
</div>