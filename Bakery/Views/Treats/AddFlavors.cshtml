@{
    Layout = "_Layout";
}

@model Bakery.Models.Treat

<h2>Assign a treat to @Html.DisplayFor(model => model.TreatName)</h2>

<br>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Add a Flavor", "Create", "Flavors")</p>
<p>@Html.ActionLink("Back to list", "Index")</p>