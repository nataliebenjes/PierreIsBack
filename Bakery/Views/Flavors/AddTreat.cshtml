@{
    Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h2>Add a treat to this Flavor category</h2>
<div>
    <h4>Add a treat: @Html.DisplayFor(model => model.FlavorName)</h4>
    @if (@ViewBag.Flavors.Count == 0)
    {
        <p>You must first add Flavors to your database!</p>
        <p>@Html.ActionLink("Add a flavor", "Create", "Flavors")</p>
    }
    else
    {
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.FlavorId)

            @Html.Label("Select flavor")
            @Html.DropDownList("FlavorId")

            <input type="submit" value="Save" class="btn btn-default" />
        }
    }

    <p>@Html.ActionLink("Back to list", "Index")</p>
    <p>@Html.ActionLink("Add a new flavor", "Create", "Flavors")</p>
</div>